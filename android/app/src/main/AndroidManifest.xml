<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- ============================================= -->
    <!-- PERMISSIONS UNTUK SEMUA VERSI ANDROID -->
    <!-- ============================================= -->
    
    <!-- Untuk semua versi: Reschedule notif setelah reboot -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    
    <!-- Untuk semua versi: Bangunkan HP dari sleep -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    
    <!-- Untuk semua versi: Internet (jika sync dengan API) -->
    <uses-permission android:name="android.permission.INTERNET"/>
    
    <!-- ============================================= -->
    <!-- PERMISSIONS ANDROID 13+ (API 33+) -->
    <!-- ============================================= -->
    
    <!-- Android 13+: Wajib untuk tampilkan notifikasi -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    
    <!-- ============================================= -->
    <!-- PERMISSIONS ANDROID 12+ (API 31+) -->
    <!-- ============================================= -->
    
    <!-- Android 12+: Exact alarm scheduling -->
    <!-- Android 14+: Perlu manual approval di Settings -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM"/>
    
    <!-- Android 14+: Alternative untuk alarm apps (auto-granted) -->
    <!-- Gunakan ini jika app Anda adalah alarm/reminder app -->
    <uses-permission android:name="android.permission.USE_EXACT_ALARM"/>

    <application
        android:label="GlowMate"
        android:icon="@mipmap/ic_launcher"
        android:enableOnBackInvokedCallback="true">
        
        <!-- ============================================= -->
        <!-- MAIN ACTIVITY -->
        <!-- ============================================= -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize"
            android:showWhenLocked="true"
            android:turnScreenOn="true">
            
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- ============================================= -->
        <!-- NOTIFICATION RECEIVERS -->
        <!-- ============================================= -->
        
        <!-- Receiver untuk boot completed: Reschedule notif setelah restart -->
        <receiver 
            android:name="com.dexterous.flutterlocalnotifications.ScheduledNotificationBootReceiver"
            android:exported="false"
            android:enabled="true"
            android:directBootAware="true">
            <intent-filter>
                <!-- HP restart normal -->
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                
                <!-- App di-update/reinstall -->
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED"/>
                
                <!-- Quick boot (beberapa vendor) -->
                <action android:name="android.intent.action.QUICKBOOT_POWERON"/>
                
                <!-- Xiaomi devices -->
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
        
        <!-- Receiver untuk scheduled notification -->
        <receiver 
            android:name="com.dexterous.flutterlocalnotifications.ScheduledNotificationReceiver"
            android:exported="false"
            android:enabled="true"/>

        <!-- Flutter metadata -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>
    
    <!-- ============================================= -->
    <!-- QUERIES (Android 11+) -->
    <!-- Jika butuh buka app settings atau browser -->
    <!-- ============================================= -->
    <queries>
        <!-- Buka browser untuk link -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="https" />
        </intent>
        
        <!-- Buka app settings -->
        <intent>
            <action android:name="android.settings.APPLICATION_DETAILS_SETTINGS" />
        </intent>
    </queries>
</manifest>